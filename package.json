{
  "name": "@yogaajs/ytoolkit",
  "version": "1.0.0",
  "description": "Personnal toolkit from YogaaJS",
  "license": "SEE LICENSE IN LICENSE",
  "author": {
    "name": "Yogaa",
    "email": "yogaa.dev@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yogaajs/yToolkit.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "tag": "latest"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "scripts": {
    "start": "tsx src/index.ts",
    "watch": "tsx watch src/index.ts",
    "test": "tsx tests/client1.ts",
    "build": "pkgroll --minify --clean-dist",
    "build:test": "pkgroll --clean-dist",
    "release": "semantic-release --dry-run"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/node": "^22.14.1",
    "pkgroll": "^2.11.2",
    "semantic-release": "^24.2.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {},
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    }
  }
}
